{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "modulePathIgnorePatterns": ["<rootDir>/dist/", "<rootDir>/build/"],
  "testPathIgnorePatterns": ["<rootDir>/dist/", "<rootDir>/build/"],
  "moduleNameMapper": {
    "(.+)\\.js": "$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/jest.setup.ts"],
  "testMatch": ["<rootDir>/test/**/*.test.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/index.ts"
  ]
}